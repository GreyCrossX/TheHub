---
import Card from "./Card.astro"
import { itemsData, eventsData, teamsData } from "./mockData";
---

<main class="px-4 sm:px-6 lg:px-8">

  <section>
    <a href="eventos">
        <h2 class="text-white px-12 pb-8 pt-16">Upcoming Events</h2>
    </a>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {eventsData.map((event) => (
        <Card
          key={event.date}
          title={event.date}
          description={event.description}
          category="Event"
          href='/eventos'
          className="max-w-md bg-gray-600 dynamic"
        />
      ))}
    </div>
  </section>

  <section>
    <a href="series">
        <h2 class="text-white px-12 py-8">Featured Teams</h2>
    </a>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {teamsData.map((team) => (
        <Card
          key={team.name}
          title={team.name}
          description={team.description}
          category="Team"
          href={team.url}
          className="max-w-md bg-gray-600 dynamic"
        />
      ))}
    </div>
  </section>

  <section>
    <a href="/tienda">
        <h2 class="text-white px-12 py-8">Featured Shop Items</h2>
    </a>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {itemsData.map((item) => (
        <Card
          key={String(item.id)}
          title={item.description}
          description={`Category: ${item.category}, Price: $${item.price}`}
          category="Shop Item"
          href={item.url}
          className="max-w-md bg-gray-600 dynamic"
        />
      ))}
    </div>
  </section>
</main>